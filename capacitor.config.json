{
  "appId": "com.anujloomba.cricket",
  "appName": "Cricket Manager",
  "webDir": "www",
  "server": {
    "androidScheme": "https"
  },
  "android": {
    "minWebViewVersion": 60,
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": false,
    "appendUserAgent": "CricketPWA/1.0",
    "overrideUserAgent": "Mozilla/5.0 (Linux; Android 10; Mobile) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.120 Mobile Safari/537.36 CricketPWA/1.0",
    "backgroundColor": "#1a1a2e"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#1a1a2e",
      "showSpinner": true,
      "spinnerColor": "#ff6b35"
    },
    "StatusBar": {
      "style": "dark",
      "backgroundColor": "#1a1a2e"
    },
    "Preferences": {
      "group": "CricketPWAData"
    }
  }
}
